<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/_bg__screen_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_bg__screen_3_shape" />

    <LinearLayout
        android:id="@+id/main_screen3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp">


            <FrameLayout
                android:id="@+id/categories_icon_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <View
                    android:id="@+id/background2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/background_ek2_shape" />

                <ImageView
                    android:id="@+id/vector_back"
                    android:layout_width="16dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="vector"
                    android:src="@drawable/vector_back" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp">

                <View
                    android:id="@+id/background_ek1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/background_ek1_shape" />


                <ImageView
                    android:id="@+id/vector_more"
                    android:layout_width="22.08dp"
                    android:layout_height="21.12dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0.96dp"
                    android:layout_marginTop="1.44dp"
                    android:src="@drawable/vector_avatar" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/name___activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/fitbot_ek1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="DM Sans"
                    android:text="@string/fitbot_ek1_string"
                    android:textColor="@color/fitbot_ek1_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/always_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="22dp">

                    <View
                        android:id="@+id/ellipse_12"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/ellipse_12_shape" />

                    <TextView
                        android:id="@+id/always_active_ek1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="DM Sans"
                        android:text="@string/always_active_ek1_string"
                        android:textColor="@color/always_active_ek1_color"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>


            <FrameLayout
                android:id="@+id/categories_icon_button_ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp">

                <View
                    android:id="@+id/background_ek2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/background_ek2_shape" />


                <ImageView
                    android:id="@+id/vector_more2"
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="vector_ek2"
                    android:src="@drawable/vector_more" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/recycler_view_item" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/send_a_message_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/send_message_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp">


                <LinearLayout
                    android:id="@+id/input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle">


                    <EditText
                        android:id="@+id/messageEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_no_underline"
                        android:ems="10"
                        android:fontFamily="DM Sans"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/icon_linear_microphone_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp">


                        <RelativeLayout
                            android:id="@+id/microphone_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:id="@+id/vector"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:contentDescription="vector"
                                android:src="@drawable/vector" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/sendMessageButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/background_shape"
                    app:srcCompat="@drawable/vector_ek1" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>